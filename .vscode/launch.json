{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug fullstack",
      "configurations": [
        "Nest.js: debug server",
        "Next.js: debug server",
        "Next.js: debug client (Chrome)",
      ]
    }
  ],
  "configurations": [
    {
      "name": "Nest.js: debug server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "preLaunchTask": "build pdf-documents-generator",
      "args": [
        "-r",
        "ts-node/register",
        "${workspaceFolder}/apps/pdf-documents-provider/src/main.ts"
      ],
      "cwd": "${workspaceFolder}/apps/pdf-documents-provider",
      "console": "integratedTerminal",
      "skipFiles": ["<node_modules>/**"],
      "serverReadyAction": {
        "pattern": "Nest application successfully started|Listening on|listening on|Application is running on",
        "action": "openExternally",
        "uriFormat": "http://localhost:3001/api"
      }
    },
    {
      "name": "Next.js: debug server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/pdf-documents-dev",
      "skipFiles": ["<node_modules>/**"]
    },
    {
      "name": "Next.js: debug client (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}